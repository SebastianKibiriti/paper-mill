# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================

# Next.js Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# PRODUCTION ENVIRONMENT (for deployment)
# =============================================================================

# Production URL (update with your actual domain)
# NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# FUTURE API INTEGRATIONS
# =============================================================================

# Email Service (for contact form - future implementation)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Database (for future user accounts and analytics)
# DATABASE_URL=postgresql://username:password@localhost:5432/toilet_paper_edu

# Analytics (for future user tracking)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# EDUCATIONAL CONTENT MANAGEMENT
# =============================================================================

# Content Management System (future implementation)
# CMS_API_URL=https://your-cms.com/api
# CMS_API_KEY=your-cms-api-key

# Educational Resources API (future implementation)
# EDU_API_URL=https://education-api.com
# EDU_API_KEY=your-education-api-key

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Image Optimization Service (if needed)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Video Hosting (for educational videos)
# VIMEO_ACCESS_TOKEN=your-vimeo-token
# YOUTUBE_API_KEY=your-youtube-api-key

# =============================================================================
# SECURITY AND MONITORING
# =============================================================================

# Security Headers (for production)
# SECURITY_KEY=your-security-key

# Error Monitoring (future implementation)
# SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id

# Performance Monitoring
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features during development
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_QUALITY_SIMULATOR=true
NEXT_PUBLIC_ENABLE_PROCESS_TIMELINE=true
NEXT_PUBLIC_ENABLE_MANUFACTURING_STATS=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Debug mode for development
DEBUG=false
NEXT_PUBLIC_DEBUG_MODE=false

# Development server configuration
PORT=3000
HOST=localhost

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local to version control
# 3. Update production values when deploying
# 4. Some variables are for future features and not currently used
# 5. Contact form currently uses client-side simulation
# 6. Quality testing simulator uses client-side random generation
# 7. Manufacturing stats use static data with animations

